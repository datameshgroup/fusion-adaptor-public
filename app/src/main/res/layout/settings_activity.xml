<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    tools:context=".screens.SettingsActivity">

    <LinearLayout
        android:layout_width="560dp"
        android:layout_height="560dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_main"
        android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30dp"
                style="@style/RoundedTabLayoutStyle"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_2"
                android:background="@drawable/rectangle_main_inner"
                android:layout_width="500dp"
                android:layout_height="450dp"
                android:layout_gravity="center">
            </androidx.viewpager2.widget.ViewPager2>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:layout_marginVertical="10dp"
            android:id="@+id/layoutEnvironment"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/lblEnvironment"
                android:textColor="@color/white"
                android:text="Development"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>